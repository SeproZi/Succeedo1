rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents for the app to function,
    // as authorization is handled at the application level.
    // Deny all writes by default to protect data integrity.
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
