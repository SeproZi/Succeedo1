rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection can be read by anyone to check for authorization
    match /users/{userId} {
      allow read: if true;
      allow write: if false;
    }

    // App data can only be read by authenticated users
    match /departments/{docId} {
      allow read, write: if request.auth != null;
    }
    match /teams/{docId} {
      allow read, write: if request.auth != null;
    }
    match /okrs/{docId} {
      allow read, write: if request.auth != null;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
