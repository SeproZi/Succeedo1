rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow read access to the users collection for the server-side check.
      allow read: if true;
      
      // Deny all writes to the users collection from the client.
      allow write: if false;
    }
    
    // Explicitly deny access to all other collections for security.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
