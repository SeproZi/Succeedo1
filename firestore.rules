
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // The users collection can be read by anyone because the `checkUser`
    // flow needs to verify if the email exists before sending a sign-in link.
    // This is secure because it only exposes the existence of an email, not any other data.
    match /users/{userId} {
      allow read: if true;
      allow write: if false; // Nobody can write to the users collection from the client.
    }

    // All other data (departments, teams, OKRs) can only be read or written
    // by a user who has successfully signed in via Firebase Authentication.
    match /{path=**}/_/{docId} {
       allow read, write: if request.auth != null;
    }
  }
}
