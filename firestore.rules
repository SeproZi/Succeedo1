rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access for the login check and for the app to fetch data.
    // Write access is disabled to prevent modification from the client.
    match /users/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /departments/{docId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /teams/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /okrs/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
